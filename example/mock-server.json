{
  "prepareErrorPath": "/prepare-error",
  "handlers": [
    {
      "path": "/",
      "method": "GET",
      "response": {
        "msg": "Hello mock server!"
      }
    },
    {
      "path": "/example-path",
      "method": "POST",
      "response": {
        "info": { "success": true },
        "data": "post validate request success data"
      },
      "request": {
        "validate": {
          "example": "required,lowercase,min=5"
        },
        "match": {
          "example": "mock-request-body"
        }
      },
      "responseEcho": {
        "example": "data.example"
      }
    }
  ]
}
